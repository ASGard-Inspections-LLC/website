#communication-preferences-pages
  .lo-container

    =notice_and_alert

    %h1 Update your communication preferences

    =form_for current_user.communication_preferences, url: settings_communication_preferences_path do |f|
      -if current_user.admin?
        %h2 Admin Communications

      -if current_user.mentor?
        %h2 Mentor Communications
        =f.label :email_on_new_discussion_post_for_mentor do
          =f.check_box :email_on_new_discussion_post_for_mentor
          %span Email when a student comments on a solution I'm mentoring


      %h2 General Communications
      =f.label :email_on_new_discussion_post do
        =f.check_box :email_on_new_discussion_post
        %span Email when a mentor comments on my solution

      =f.button "Save settings"
