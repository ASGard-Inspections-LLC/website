#track-page
  .lo-container
    %h1= @track.title

    %p Track Unlocked

    %h2 Core Exercises
    %ul
      -@core_exercises_and_solutions.each do |exercise, solution|
        %li
          -if solution
            = link_to exercise.title, solution
            (#{solution.status})
          -else
            = exercise.title

    %h2 Secondary Exercises
    %ul
      -@side_exercises_and_solutions.each do |exercise, solution|
        %li
          -if solution
            = link_to exercise.title, solution
            (#{solution.status})
          -else
            = exercise.title
